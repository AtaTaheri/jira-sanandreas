{
  "manifest_version": 2,
  "name": "Jira San Andreas",
  "version": "1.0",
  "description": "A fun chrome extension",
  "icons": {
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*.atlassian.net/*"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "view/popup.html",
    "default_icon": "assets/icon_128.png"
  },
  "web_accessible_resources": [
    "css/popup.mp3",
    "assets/mission_passed.mp3",
    "assets/mission_passed.png"
  ]
}